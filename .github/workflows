name: Deploy to EC2

on:
  push:
    branches:
      - main # main 브랜치에 push되면 배포

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up SSH keys
        run: |
          mkdir -p ~/.ssh
          echo "${{ secrets.EC2_SSH_KEY }}" > ~/.ssh/id_rsa
          chmod 600 ~/.ssh/id_rsa

      - name: Deploy to EC2 instance 1
        run: |
          ssh -o StrictHostKeyChecking=no ubuntu@<EC2_1_PUBLIC_IP> "cd /home/ubuntu/my-app && git pull origin main && npm install && npm run build"

      - name: Deploy to EC2 instance 2
        run: |
          ssh -o StrictHostKeyChecking=no ubuntu@<EC2_2_PUBLIC_IP> "cd /home/ubuntu/my-app && git pull origin main && npm install && npm run build"
